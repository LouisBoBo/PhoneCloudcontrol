        <activity
            android:name=".main.ui.activity.SceneExeRightActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.message.MessageDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.message.MyMessageListActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".main.show.SwitchShowActivity"
            android:configChanges="keyboard|keyboardHidden|orientation|screenSize|screenLayout|smallestScreenSize|uiMode"
            android:screenOrientation="portrait" />


    </application>


</manifest>