<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape>
            <solid android:color="#FFFFFF" />   //背景
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp" android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp" />
            <stroke android:width="1dp" android:color="#BEBEBE" />       //边缘颜色和宽度
        </shape>
    </item>
    <item android:top="1dp" android:left="1dp" android:right="1dp">
        <shape>
            <solid android:color="#FFFFFF" />
            <corners android:topLeftRadius="10dp" android:topRightRadius="10dp"
                android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp" />
            <stroke android:width="1dp" android:color="#ffffffff" />
        </shape>
    </item>
</selector>