<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/fenqu_header"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"
        android:padding="0.5dp"
        android:background="@drawable/background_build_unselector"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/fenqu_header_img"
        android:layout_width="18dp"
        android:layout_height="26dp"
        android:background="@color/color_ff000000"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@id/fenqu_header"
        app:layout_constraintStart_toStartOf="@id/fenqu_header"
        app:layout_constraintBottom_toBottomOf="@id/fenqu_header"/>

    <TextView
        android:id="@+id/fenqu_content"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_30"
        android:text="分区"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@id/fenqu_header"
        app:layout_constraintStart_toEndOf="@id/fenqu_header_img"
        app:layout_constraintBottom_toBottomOf="@id/fenqu_header"/>

    <TextView
        android:id="@+id/tv_more"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_30"
        android:text="更多"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="@id/fenqu_header"
        app:layout_constraintBottom_toBottomOf="@id/fenqu_header"
        app:layout_constraintEnd_toEndOf="@id/fenqu_header"/>

</androidx.constraintlayout.widget.ConstraintLayout>