<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="41dp"
    android:background="@color/pop_item_bg_pressed"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/baseview_change"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="0dp"
        android:background="@color/color_ffffffff"
        android:layout_marginBottom="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/build_videochange"
        android:layout_width="100dp"
        android:layout_height="@dimen/dp_40"
        android:text="节目切换"
        android:singleLine="true"
        app:layout_constraintTop_toTopOf="@id/baseview_change"
        app:layout_constraintStart_toStartOf="@id/baseview_change"
        android:gravity="center_vertical"
        android:layout_marginLeft="@dimen/dp_10"/>

    <ImageView
        android:id="@+id/right_img"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginRight="@dimen/dp_10"
        android:src="@mipmap/offline"
        app:layout_constraintTop_toTopOf="@id/baseview_change"
        app:layout_constraintEnd_toEndOf="@id/baseview_change"
        app:layout_constraintBottom_toBottomOf="@id/baseview_change"/>

    <TextView
        android:id="@+id/buildbtn_videochange"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_30"
        android:background="@mipmap/xiafa_namal"
        android:layout_marginRight="@dimen/dp_8"
        app:layout_constraintTop_toTopOf="@id/baseview_change"
        app:layout_constraintEnd_toStartOf="@id/right_img"
        app:layout_constraintBottom_toBottomOf="@id/baseview_change"
        android:gravity="center"
        android:layout_marginLeft="@dimen/dp_20"/>

    <TextView
        android:id="@+id/buildbtn_videostop"
        android:layout_width="@dimen/dp_90"
        android:layout_height="@dimen/dp_30"
        android:layout_marginEnd="8dp"
        android:background="@mipmap/stop_namal"
        android:gravity="center"
        app:layout_constraintEnd_toStartOf="@id/buildbtn_videochange"
        app:layout_constraintTop_toTopOf="@id/buildbtn_videochange"
        app:layout_constraintBottom_toBottomOf="@id/baseview_change"
        app:layout_constraintVertical_bias="0.0" />
</androidx.constraintlayout.widget.ConstraintLayout>